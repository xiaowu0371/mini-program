/**index.wxss**/
.content {
  width:100%;
  box-sizing: border-box;
} 
.banner{
  width:100%;
  height: 260rpx;
}
.banner image{
  width:100%;
  height:260rpx;
}
.main{
  padding:30rpx;
}
.info{
  width:100%;
  display: flex;
  height:120rpx;
  border:1px solid #ddd;
  border-radius: 20rpx;
  justify-content: space-between;
  margin-top:48rpx;
  padding:0 40rpx;
  overflow: hidden;
}

.info-title{
  width:130rpx;
  height:80rpx;
  line-height: 80rpx;
  margin:20rpx 0;
  border-right:1px solid #f1f1f1;
}
.info-list{
  position: relative;
  left:0;
  top:0;
  flex:1;
  height:120rpx;
}

.info-list text{
  display: block;
  height:110rpx;
  line-height: 110rpx;
  text-indent: 30rpx;       
}
.title{
  margin:50rpx 0 20rpx;
  text-indent: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.news-font{
  display:block;
  line-height: 60rpx;
  text-indent: 56rpx;
}
.ad-bar{
  padding:40rpx 30rpx;
  background:#efe2d9;
  border-radius:20rpx;
  margin-top:30rpx;
}
.ad-title{
  display: block;
  font-size:30rpx;
  color:#b48460;
}
.ad-intr{
  display:inline-block;
  font-size:26rpx;
  color:#dd5315;
  border:1px solid #dd5315;
  border-radius: 20rpx;
  padding:5rpx 10rpx;
  margin-top:15rpx;
}
.course-hot-items{
  display: flex;
  justify-content: space-between;

}
.course-hot-items view{
  width:210rpx;
  margin-right:30rpx;
}
.course-hot-items view image{
  width:210rpx;
  height:180rpx;
  border-radius: 10rpx;
}
.course-hot-items view text{
  display:block;
}
.course-hot-items view .price{
  color:#e4943d;
}
.teacher{
  border-top:2px solid #fafafa;
  margin-top:40rpx;
}
.teacher text{
  display: block;
}
.teacher-items{
  height:220rpx;
  padding-left:30rpx;
  background:#f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius:10rpx;
  margin-top:40rpx;
}
.teacher-items view{
  flex: 1;
}
.teacher-items image{
  width:260rpx;
  height:160rpx;
  align-self: flex-end;
}
.teacher .change-more{
  display:block;
  color:#ff8500;
  margin-top:60rpx;
  text-align: center;
  line-height: 47rpx;
}
.review{

  border-top:2px solid #fafafa;
  margin-top:30rpx;
}
.review-items{
  display:flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding-top:20rpx;
}
.review-items>view{
  width:330rpx;
  padding:56rpx 0 36px 30rpx;
  border:2px solid #ddd;
  border-radius: 20rpx;
  display:flex;
  align-items: center;
  margin-bottom:50rpx;
}
.review-items>view image{
  width:60rpx;
  height:60rpx;
  margin-right:20rpx;
}
.review-items>view text{
  display: block;
}
