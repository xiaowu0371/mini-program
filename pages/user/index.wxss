/**index.wxss**/
.banner{
  width:100%;
  height:280rpx;
}
.header{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top:-80rpx;
  padding-bottom:60rpx;
}
.header image{
  width:150rpx;
  height:150rpx;
  border-radius: 50%;
  margin-right:30rpx;
}
.header>view{
  flex: 1;
}
.header text{
  display: block;
}
.header .h2{
  color:#ffffff;
}
.header .h3{
  padding:20rpx 0;
}
.line{
  width:100%;
  height:38rpx;
  background: #f5f5f5;
}
.list{
  display: flex;
  height:100rpx;
  align-items: center;
  border-bottom:2px solid #f5f5f5;
}
.list .h2{
  display: block;
  font-weight: normal;
  width:65%;
}
.list .h3{
  display: block;
  width:20%;
  text-align:right;
}
.list image{
  width:35rpx;
  height:35rpx;
  margin-right:20rpx;
}
.list-border{
  border-bottom:none;
}
